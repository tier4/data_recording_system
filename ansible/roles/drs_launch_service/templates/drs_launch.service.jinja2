[Unit]
Description=Sensor driver service
Requires=network-online.target
After=network-online.target


[Service]
Type=simple
ExecStart=/opt/drs/run.sh
LimitRTPRIO=98
ExecReload=kill -SIGINT $MAINPID
ExecStop=kill -SIGINT $MAINPID
Restart=always
User={{ drs_user_name }}
Environment="HOME=/home/{{ drs_user_name }}"

[Install]
WantedBy=multi-user.target network-online.target
